<launch>
    <arg name="use_sim_time" default="true" />
    <arg name="gui" default="true" />
    <arg name="headless" default="false" />
    <arg name="world_name" value="$(find jackal_world)/worlds/scenarioDroneMobile.world"/>

    <!-- Short-term hack to support the original front_laser:=true argument for spawning
        the simulator. This will be removed in favour of using the config:=x arg instead. -->
    <arg name="front_laser" default="false" />
    <arg name="default_config" value="front_laser" if="$(arg front_laser)" />
    <arg name="default_config" value="base" unless="$(arg front_laser)" />
    <!-- end of hack -->

    <!-- Configuration of Jackal which you would like to simulate.
        See jackal_description for details. -->
    <arg name="config" default="$(arg default_config)" />

    <!-- Optionally enable teleop for the simulation -->
    <arg name="joystick" default="false" />

    <!-- Launch Gazebo with the specified world -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="debug" value="1" />
    <arg name="verbose" value="1" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="use_sim_time" value="$(arg use_sim_time)" />
    <arg name="headless" value="$(arg headless)" />
    <arg name="world_name" value="$(arg world_name)" />
    </include>
  
    <include file="$(find jackal_world)/launch/spawners/spawn_jackal_with_beacon_and_anchor.launch">
        <arg name="x" value="-2.42" />
        <arg name="y" value="-8.19" />
        <arg name="z" value="1.0" />
        <arg name="yaw" value="0.418" />
        <arg name="config" value="$(arg config)" />
        <arg name="joystick" value="$(arg joystick)" />

        <arg name="right_id" value="0" />
        <arg name="left_id" value="1" />
        <arg name="anchor_id" value="10" />

        <arg name="robot_name"  value="Jacakl1" />
        <arg name="ns" default="Jackal1" />
    </include>


    <include file="$(find jackal_world)/launch/spawners/spawn_jackal_with_beacon_and_anchor.launch">
        <arg name="x" value="3.432" />
        <arg name="y" value="-9.19" />
        <arg name="z" value="1.0" />
        <arg name="yaw" value="2.133" />
        <arg name="config" value="$(arg config)" />
        <arg name="joystick" value="$(arg joystick)" />

        <arg name="right_id" value="2" />
        <arg name="left_id" value="3" />
        <arg name="anchor_id" value="11" />

        <arg name="robot_name"  value="Jacakl2" />
        <arg name="ns" default="Jackal2" />
    </include>


    <include file="$(find jackal_world)/launch/spawners/spawn_controlled_drone.launch">
        <arg name="x" value="-5" />
        <arg name="y" value="-10" />
        <arg name="yaw" value="1.57079632679" />
        <arg name="anchor_id" value="-1" />
        <arg name="ns" default="drone1" />
    </include>

    <include file="$(find jackal_world)/launch/spawners/spawn_controlled_drone.launch">
        <arg name="x" value="0" />
        <arg name="y" value="-7" />
        <arg name="yaw" value="1.57079632679" />
        <arg name="anchor_id" value="-2" />
        <arg name="ns" default="drone2" />
    </include>


    <include file="$(find jackal_world)/launch/spawners/spawn_controlled_drone.launch">
        <arg name="x" value="4" />
        <arg name="y" value="-10" />
        <arg name="yaw" value="1.57079632679" />
        <arg name="anchor_id" value="-3" />
        <arg name="ns" default="drone3" />
    </include>
</launch>